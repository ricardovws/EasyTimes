
@model dynamic
@{
    ViewData["Title"] = "ViewDetails";
}

<h2>@Model.ProjectName - @Model.ClientName </h2>


<p class="text-primary">@Model.Comments</p>
<hr />
<div>
    <ul class="nav nav-pills">
        <li class="active">
            <a href="#">
                How much to earn <span class="badge">
                    R$ @Model.TotalEarned
                </span>
            </a>
        </li>
        <li><a href="#">Time worked <span class="badge">@Model.AmountOfHours h</span></a></li>
        <li><a href="#">Overtime worked <span class="badge">@Model.Overtime h</span></a></li>
        <li><a href="#">Total run <span class="badge">@Model.OnTheRach km</span></a></li>
        <li><a href="#">Meal ticket <span class="badge"> R$ @Model.MealTicketValue</span></a></li>
    </ul>
    <hr />

</div>

<table class="table">
    <thead>
    <tr>
        <th>Date</th>
        <th></th>
        <th>Start</th>
        <th></th>
        <th>End</th>
        <th></th>
        <th>Quantity of hours</th>
        <th></th>
        <th>Travel (km)</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach (LittleTask littleTask in Model._list)
        {
            <tr>
                <td>@littleTask.Date.ToString("dd/MM/yyyy")</td>
                <td></td>
                <td>@littleTask.Start.ToString("HH:mm")</td>
                <td></td>
                <td>@littleTask.End.ToString("HH:mm")</td>
                <td></td>
                <td>@littleTask.BetweenBoth</td>
                <td></td>
                <td>@littleTask.kM</td>
            </tr>
        }
        </tbody>
</table>
<td>
    <a asp-action="GoBackToDetails">Go back to details</a>
</td>

<hr />
