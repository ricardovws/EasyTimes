@model IEnumerable<EasyTimes.Models.LittleTask>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

    <td>
        <a asp-action="GoBackToDetails">Go back to details</a>
    </td>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Start)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.End)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BetweenBoth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Overtime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comments)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.kM)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Start)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.End)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BetweenBoth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Overtime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comments)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.kM)
            </td>

            <td>
                <a asp-action="EditLittleTask" asp-route-id="@item.id">Edit</a> |

                <a asp-action="DeleteLittleTask" asp-route-id="@item.id">Delete</a>

            </td>

        </tr>
        }
    </tbody>
</table>
