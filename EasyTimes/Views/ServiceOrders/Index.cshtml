@model IEnumerable<EasyTimes.Models.ServiceOrder>

@{
    ViewData["Title"] = "Index";
}

<h2>List of Service Orders</h2>


@*<p>
    <a asp-action="Create">Create New</a>
</p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                <p></p>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SerialCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClientName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.AmountOfHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalEarned)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="ViewDetails" asp-route-id="@item.id">View task details!</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SerialCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClientName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.AmountOfHours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalEarned)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
