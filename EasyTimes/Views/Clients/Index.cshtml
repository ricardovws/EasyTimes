@model IEnumerable<EasyTimes.Models.Client>

@{
    ViewData["Title"] = "Index";
}

<h2 class="listOfClients">List of Clients</h2>

<p>
    <a asp-action="Create" class="btn btn-primary btn-group-sm">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <p></p>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CNPJ)
            </th>
            <th>
                Contact Email
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="table_background">
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="StartAService" asp-route-id="@item.id" class="btn btn-info btn-xs">Start a new service!</a> 
             
            </td>
            <td class="row_coloured">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="row_coloured">
                @Html.DisplayFor(modelItem => item.CNPJ)
            </td>
            <td class="row_coloured">
                @Html.DisplayFor(modelItem => item.MainContactEmail)
            </td>
            <td class="row_coloured">
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-primary btn-sm">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
